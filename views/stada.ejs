<link rel="stylesheet" href="/css/styles.css">

<%- include('header') -%>

<h1>League Standings</h1>
<table>
    <thead>
        <tr>
            <th>Position</th>
            <th>Team</th>
            <th>Played</th>
            <th>Wins</th>
            <th>Losses</th>
            <th>Goals For</th>
            <th>Goals Against</th>
            <th>Points</th>
        </tr>
    </thead>
    <tbody>
        <% standings.forEach(function(team, index) { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= team.name %></td>
                <td><%= team.played %></td>
                <td><%= team.wins %></td>
                <td><%= team.losses %></td>
                <td><%= team.goals_for %></td>
                <td><%= team.goals_against %></td>
                <td><%= team.points %></td>
            </tr>
        <% }); %>
    </tbody>
</table>

<%- include('footer') -%>
